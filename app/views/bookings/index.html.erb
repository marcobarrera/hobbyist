<div class="main-container">
  <h1 style="color: white; text-align: center;">My Events</h1>

  <div class="booking-cards">
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="col-4">
            <div class="card box-shadow m-3 card-event" id = "booking">
              <% if booking.event.photo.attached? %>
                <%= cl_image_tag booking.event.photo.key, height: 220, width: 350, crop: :fill, class: "card-img-top", style: "object-fit: cover" %>
              <% else %>
                <img class="card-img-top" src="https://images.unsplash.com/photo-1591474200742-8e512e6f98f8? ixlib=rb-1.2.1&auto=format&fit=crop&w=967&q=80" alt="Card image cap">
              <% end %>

              <div class="card-body">
                <h5 class="card-title"><%= booking.event.name.upcase %></h5>
                <p class="card-text"><%= booking.event.address.capitalize %></p>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
